<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SettingsFragment.AliSet"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please select Home Screen background"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"/>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center" >

        <RadioButton
            android:id="@+id/ibrahimYellowRadioBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Yellow" />

        <RadioButton
            android:id="@+id/ibrahimRedRadioBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Red" />

        <RadioButton
            android:id="@+id/ibrahimGreenRadioBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Green" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please select clock format"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"/>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <RadioButton
            android:id="@+id/ibrahimHr12RadioBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="12hr" />

        <RadioButton
            android:id="@+id/ibrahimHr24RadioBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="24hr" />

    </RadioGroup>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please select dropdown font size"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"/>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <RadioButton
                android:id="@+id/ibrahimFont12RadioBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"
                android:layout_marginRight="5dp"/>

            <RadioButton
                android:id="@+id/ibrahimFont13RadioBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="13"
                android:layout_marginRight="5dp"/>

            <RadioButton
                android:id="@+id/ibrahimFont14RadioBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="14"
                android:layout_marginRight="5dp"/>

            <RadioButton
                android:id="@+id/ibrahimFont15RadioBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="15"
                android:layout_marginRight="5dp"/>

        </RadioGroup>


    <Button
        android:id="@+id/ibrahimSharedPrefSaveBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_marginTop="20dp" />
</LinearLayout>