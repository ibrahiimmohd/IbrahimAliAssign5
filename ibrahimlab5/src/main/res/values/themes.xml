<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IbrahimLab5" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.IbrahimLab5.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.IbrahimLab5.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.IbrahimLab5.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FontSize12">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="FontSize13">
        <item name="android:textSize">13sp</item>
    </style>
    <style name="FontSize14">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="FontSize15">
        <item name="android:textSize">15sp</item>
    </style>
</resources>